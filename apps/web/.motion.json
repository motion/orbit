{
  "babel": {
    "plugins": [
      [
        "gloss/transform",
        {
          "decoratorName": "view"
        }
      ],
      "babel-plugin-jsx-if",
      [
        "babel-plugin-root-import",
        {
          "rootPathSuffix": "app"
        }
      ],
      "babel-plugin-transform-decorators-legacy",
      "react-hot-loader/babel"
    ],
    "presets": [
      [
        "babel-preset-env",
        {
          "exclude": [
            "transform-regenerator"
          ]
        }
      ],
      "babel-preset-stage-0",
      "babel-preset-react"
    ]
  },
  "pathType": "filePath",
  "webServerPort": 3001,
  "saveNpmModules": true,
  "bundleDirectory": ".",
  "outputDirectory": "./public",
  "includePolyfills": true
}
