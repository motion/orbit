#!/bin/bash

docker-compose up -d
. $(dirname $0)/__/common
cd $ROOT

trap killgroup SIGINT
killgroup() {
  kill 0
}

if [ "$1" = "orbit" ]; then
  echo "Running orbit-main..."
  cd app/orbit-main
else
  cd app/$1
fi

if [ "$2" = "--prod" ]; then
  npm run start-prod -- ${@:3}
else
  npm run start -- ${@:2}
fi
