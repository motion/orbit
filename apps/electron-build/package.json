{
  "name": "@mcro/electron-build",
  "version": "1.5.34",
  "private": true,
  "scripts": {
    "deploy":
      "npm run sign-app && npm run bundle-app && npm run prepare-publish && npm run publish-app",
    "dist": "npm version patch && npm run bundle",
    "bundle": "node ./lib/bundle.js",
    "bundle-debug": "DEBUG=electron-packager,electron-build:* npm run bundle",
    "start-prod":
      "DEBUG=api,crawler,crawler:* app/Orbit-darwin-x64/Orbit.app/Contents/MacOS/Orbit",
    "publish-app": "publish -p ./app",
    "prepare-publish":
      "cp ./app/Orbit.dmg ./app/Orbit-$npm_package_version.dmg && zip -r ./app/Orbit-$npm_package_version-mac.zip ./app/Orbit-darwin-x64/Orbit.app",
    "bundle-app":
      "electron-installer-dmg --overwrite --out ./app --icon ./resources/icon.icns ./app/Orbit-darwin-x64/Orbit.app Orbit",
    "sign-app": "electron-osx-sign ./app/Orbit-darwin-x64/Orbit.app"
  },
  "devDependencies": {
    "electron": "^1.8.0",
    "electron-installer-dmg": "^0.2.1",
    "electron-osx-sign": "^0.4.7",
    "electron-packager": "malept/electron-packager#fs-extra-v5-experimental",
    "electron-simple-publisher": "^0.4.7",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "debug": "^3.1.0"
  }
}
