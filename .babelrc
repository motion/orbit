{
  "env": {
    "development": {
      "presets": [["@mcro/babel-preset-motion", { "async": false }]]
    },
    "es6": {
      "presets": [
        "es2015",
        [
          "@mcro/babel-preset-motion",
          {
            "nodeTarget": 8,
            "disable": ["@mcro/gloss/transform", "@mcro/hmr", "@mcro/hmr-view"]
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "@mcro/babel-preset-motion",
          {
            "async": false,
            "disable": [
              "@mcro/hmr",
              "@mcro/hmr-view",
              "babel-plugin-sitrep",
              "babel-preset-env"
            ]
          }
        ]
      ]
    }
  }
}
