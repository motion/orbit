{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2017",
    "module": "esnext",
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "outDir": "./ts-build",
    "baseUrl": "src/",
    "paths": {
      "~/*": [
        "*",
      ],
      "~/constants": [
        "constants",
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
