#!/bin/bash

. $(dirname $0)/__/common
cd $ROOT

ACTION=$1
ARG1=$2

if [ "$ACTION" = "electron" ]; then
  cd apps/electron
  npm start
elif [ "$ACTION" =  "web" ]; then
  cd apps/web
  if [ "$ARG1" = "--clean" ]; then
    motion watch --disable-cache
  else
    motion watch ${@:2}
  fi
else
  npm run $1 ${@:2}
fi
