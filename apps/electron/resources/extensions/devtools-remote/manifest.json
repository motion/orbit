{
  "name": "DevTools Remote",
  "version": "1.1.0",
  "manifest_version": 2,
  "description": "Debug your user's browser remotely via Chrome DevTools.",
  "icons": {
    "16": "icons/Icon-16.png",
    "48": "icons/Icon-48.png",
    "128": "icons/Icon-128.png"
  },
  "background": {
    "page": "background.html"
  },
  "web_accessible_resources": [
    "background.html",
    "background.js",
    "socketio.js"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "debugger",
    "<all_urls>",
    "file:///*",
    "http://*/*",
    "https://*/*"
  ]
}
