#!/bin/bash

. $(dirname $0)/__common

cd $ROOT

# set prod context
export KUBECONFIG=infra/keys/kubes/prod
kubectl config use-context stackpoint

ACTION=$1

# RUN
if [ "$ACTION" = "ui" ]; then
  open https://api.stackpoint.io/cluster/4578/kubeui/api/v1/proxy/namespaces/kube-system/services/kubernetes-dashboard/#/workload?namespace=_all
else
  bin/__kubes ${@:1}
fi
