    "mobx": "3.3.1",
    "puppeteer": "^0.13.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "readability-from-string": "^2.0.0",
    "sanitize-html": "^1.16.1",
    "upndown": "^2.1.0",
    "urijs": "^1.19.0"
  },
  "devDependencies": {
    "@mcro/builder": "^1.5.1",
    "nodemon": "^1.11.0"
  }
}
