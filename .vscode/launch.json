{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Desktop",
      "port": 9229,
      "localRoot": "${workspaceFolder}/apps/desktop",
      "outFiles": ["${workspaceRoot}/apps/desktop/lib/**/*.js"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Electron",
      "port": 5959,
      "localRoot": "${workspaceFolder}/apps/electron",
      "outFiles": ["${workspaceRoot}/apps/electron/lib/**/*.js"]
    }
  ]
}
