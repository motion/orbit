{
  "env": {
    "development": {
      "presets": ["@mcro/preset-motion"]
    },
    "es6": {
      "presets": [
        "es2015",
        [
          "@mcro/preset-motion",
          {
            "nodeTarget": 8,
            "disable": ["@mcro/hmr", "@mcro/hmr-view"]
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "@mcro/preset-motion",
          {
            "disable": [
              "@mcro/hmr",
              "@mcro/hmr-view",
              "babel-plugin-sitrep",
              "babel-preset-env"
            ]
          }
        ]
      ]
    }
  }
}
