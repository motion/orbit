{
  "plugins": [
    "babel-plugin-transform-decorators-legacy",
    [
      "gloss/transform",
      {
        "decoratorName": "view",
        "jsxIf": true
      }
    ],
    [
      "babel-plugin-root-import",
      {
        "rootPathSuffix": "app"
      }
    ]
  ],
  "presets": [
    [
      "babel-preset-env",
      {
        "debug": true,
        "useBuiltIns": true,
        "targets": {
          "node": "current",
          "chrome": "40"
        },
        "exclude": [
          "transform-regenerator",
          "transform-async-to-generator"
        ]
      }
    ],
    "babel-preset-react",
    "babel-preset-stage-1"
  ]
}
