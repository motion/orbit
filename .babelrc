{
  "env": {
    "development": {
      "presets": ["@mcro/preset-motion"]
    },
    "es6": {
      "presets": [
        "babel-preset-react",
        [
          "@mcro/preset-motion",
          {
            "nodeTarget": 7
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "@mcro/preset-motion",
          {
            "disable": [
              "@mcro/hmr",
              "@mcro/hmr-view",
              "babel-plugin-sitrep",
              "babel-preset-env"
            ]
          }
        ]
      ]
    },
    "production-package": {
      "presets": [
        "es2015",
        [
          "@mcro/preset-motion",
          {
            "disable": ["@mcro/hmr", "@mcro/hmr-view", "babel-plugin-sitrep"],
            "async": false,
            "rootSuffix": ""
          }
        ],
        [
          "minify",
          {
            "mangle": false
          }
        ]
      ]
    }
  }
}
