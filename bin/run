#!/bin/bash

. $(dirname $0)/__/common
cd $ROOT

trap killgroup SIGINT
killgroup() {
  kill 0
}

if [[ "$1" == "" ]]; then
  npx lerna --parallel \
    --scope @mcro/orbit-desktop \
    --scope @mcro/orbit-app \
    --scope @mcro/orbit-electron \
    exec -- npm run start -- ${@:2}
else
  cd apps/$1
  npm run start -- ${@:2}
fi
