{
  "name": "orbit",
  "productName": "Orbit",
  "author": "Orbit",
  "description": "Orbit",
  "version": "2.2.333",
  "dependencies": {
    "@mcro/orbit": "*"
  },
  "devDependencies": {
    "electron": "3.0.1"
  },
  "build": {
    "appId": "com.o.orbit",
    "productName": "Orbit",
    "asar": true,
    "npmRebuild": false,
    "mac": {
      "target": "zip",
      "icon": "../resources/icon.icns",
      "provisioningProfile": "../build-resources/orbit.provisionprofile",
      "extendInfo": {
        "LSUIElement": 1
      }
    },
    "directories": {
      "buildResources": "../resources",
      "output": "../dist"
    },
    "files": [
      "**/*",
      "!**/sqlite3/build**/*",
      "!**/sqlite3/deps/sqlite-autoconf-*.tar.gz",
      "!**/figlet/fonts/**/*",
      "!**/node_modules/electron/**/*",
      "!**/*oracle/orbit/Build/Products/Release**/*",
      "!**/*.chromium.html",
      "!**/*demo.gif",
      "!**/*.test.js",
      "!**/*.development.js",
      "!**/*.min.map",
      "!**/*.js.map",
      "!**/*.d.ts",
      "!**/*.ts"
    ],
    "extraResources": [
      {
        "from": "../../oracle/orbit/Build/Products/Release/orbit.app/Contents/Resources",
        "to": ".",
        "filter": "**/*"
      },
      {
        "from": "../../oracle/orbit/Build/Products/Release/orbit.app/Contents/Frameworks",
        "to": "../Frameworks",
        "filter": "**/*"
      },
      {
        "from": "../../oracle/orbit/Build/Products/Release/orbit.app/Contents/MacOS/orbit",
        "to": "../MacOS/oracle",
        "filter": "**/*"
      }
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "http://get.tryorbit.com/updates"
      }
    ]
  }
}
