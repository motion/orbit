#!/usr/bin/env node

const shouldBuild = process.argv.indexOf('--build') > 0

function start() {
  if (shouldBuild) {
    require('./_/build.js')
  } else {
    require('./_/run.js')
  }
}

if (process.argv.indexOf('--clean') > 0) {
  require('./_/helpers/clean').clean().then(start)
} else {
  start()
}
