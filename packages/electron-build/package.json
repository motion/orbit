{
  "name": "@mcro/electron-build",
  "productName": "Orbit",
  "version": "1.5.84",
  "private": true,
  "updater": {
    "url": "https://raw.githubusercontent.com/motion/orbit-updates/master/updates.json"
  },
  "scripts": {
    "build": "build dev",
    "watch": "npm run build -- --watch",
    "deploy": "npm run prepare-publish && npm run publish-app && npm run publish-clean",
    "pack": "npm run sign-app && npm run pack-app",
    "pack-app": "electron-installer-dmg --overwrite --out ./app --icon ./resources/icon.icns ./app/Orbit-darwin-x64/Orbit.app Orbit",
    "build-app": "npm version patch && npm run bundle && npm run pack",
    "bundle": "DEBUG=electron-packager node --trace-warnings ./lib/bundle.js && npm run fix-bundle",
    "fix-bundle": "./fixBundle.sh",
    "bundle-debug": "DEBUG=electron-packager,electron-build:* npm run bundle",
    "start-prod": "DEBUG=api,crawler,crawler:* app/Orbit-darwin-x64/Orbit.app/Contents/MacOS/Orbit",
    "publish-app": "publish -p ./app",
    "prepare-publish": "if [ ! -f \"./app/Orbit-$npm_package_version.dmg\" ]; then cp ./app/Orbit.dmg ./app/Orbit-$npm_package_version.dmg && zip -r -X -8 -q ./app/Orbit-$npm_package_version-mac.zip ./app/Orbit-darwin-x64/Orbit.app; fi",
    "publish-clean": "rm -r ./app/Orbit-$npm_package_version-mac.zip && mkdir -p ./app/releases && mv ./app/Orbit-$npm_package_version.dmg ./app/releases",
    "sign-app": "electron-osx-sign --ignore puppeteer/\\.local-chromium ./app/Orbit-darwin-x64/Orbit.app",
    "postinstall": "cd iohook && npm install"
  },
  "devDependencies": {
    "execa": "^0.9.0",
    "electron-installer-dmg": "^0.2.1",
    "electron-osx-sign": "^0.4.8",
    "electron-packager": "^11.0.0",
    "electron-simple-publisher": "^0.4.9",
    "electron-rebuild": "^1.7.3",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "iohook": "^0.1.11",
    "debug": "^3.1.0",
    "fs-extra": "^4.0.2"
  },
  "peerDependencies": {
    "electron": "*"
  },
  "publishConfig": {
    "access": "public"
  }
}
