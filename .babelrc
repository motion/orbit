{
  "env": {
    "development": {
      "presets": [["@mcro/babel-preset-motion"]]
    },
    "es6": {
      "presets": [
        [
          "@mcro/babel-preset-motion",
          {
            "nodeTarget": 8,
            "disable": ["@mcro/gloss/transform", "@mcro/hmr", "@mcro/hmr-view"]
          }
        ]
      ]
    },
    "production": {
      "presets": [
        [
          "@mcro/babel-preset-motion",
          {
            "disable": ["@mcro/hmr", "@mcro/hmr-view"]
          }
        ]
      ]
    }
  }
}
