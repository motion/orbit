#!/bin/bash

. $(dirname $0)/__/common

# TODO move this into each package and just have this npm run build in each

if [ "$1" = "" ]; then
  npx oao all "npm run build"
  exit 0
fi
if [ "$1" = "--watch" ]; then
  npx oao all "npm run watch"
  exit 0
fi

MODES="$1"
WATCH="$2"

for i in ${MODES//,/$IFS}; do
  if [ "$i" = "prod" ]; then
    BABEL_ENV=production babel src --out-dir dist -s true &
  fi
  if [ "$i" = "dev" ]; then
    babel src --out-dir lib -s true &
  fi
  if [ "$i" = "es6" ]; then
    BABEL_ENV=es6 babel src --out-dir es6 -s true &
  fi
done

wait

