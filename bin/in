#!/bin/bash

. $(dirname $0)/__/common

NAME=$1
ARGS=${@:2}

echo "in $NAME: $ARGS"

APP="$ROOT/app/$NAME"
PKG="$ROOT/packages/$NAME"
PRJ="$ROOT/project/$NAME"

if [ -d "$APP" ]; then
  cd $APP
  eval $ARGS
fi

if [ -d "$PKG" ]; then
  cd $PKG
  eval $ARGS
fi

if [ -d "$PRJ" ]; then
  cd $PRJ
  eval $ARGS
fi

cd $ROOT
