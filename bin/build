#!/bin/bash

. $(dirname $0)/__/common

echo "you may want to just run this with vscode directly (cmd+ctrl+b > tsc: watch)"

if [ "$(realpath .)" = "$ROOT" ]; then
  echo "building.... $(pwd)"
  if [ "$1" = "--watch" ]; then
    ./node_modules/.bin/tsc -b -w --preserveWatchOutput ${@:2}
    echo "RAN WATCH"
  else
    ./node_modules/.bin/tsc -b ${@:1}
    echo "RAN BUILD"
  fi
fi

