#!/bin/bash

rm -rf app/*/npm-debug.log.*
rm -rf app/*/_
rm -rf apps-*/*/_
rm -rf packages/*/_
rm -rf packages/*/npm-debug.log.*
rm -rf packages/*/shrinkwrap.json

if [[ "$1" = "--all" ]]; then
  rm -rf node_modules
  rm -rf app/*/node_modules
  rm -rf apps-*/*/node_modules
  rm -rf packages/*/node_modules
fi
