{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "outDir": "./ts-build",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["*", "./*"]
    }
  },
  "exclude": ["node_modules", "app", "build", "assets", "infra"],
  "include": ["src/**/*"]
}
