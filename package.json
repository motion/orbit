{
  "name": "motion-starter",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --skip-git",
    "web": "cd apps/web && npm start",
    "clean": "rm -rf apps/*/lib && rm -rf apps/*/node_modules",
    "build": "lerna exec --ignore web -- babel src --out-dir lib",
    "compile": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "api": "COUCHDB_USER=admin COUCHDB_PASSWORD=password docker-compose up --remove-orphans",
    "electron": "cd apps/web && npm run electron"
  },
  "dependencies": {
    "babel-cli": "^6.14.0",
    "babel-preset-steelbrain": "^4.0.2",
    "lerna": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "flow-bin": "^0.38.0"
  }
}
