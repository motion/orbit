{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "module": "es6",
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "exclude": [
    "node_modules",
    "app",
    "build",
    "assets",
    "infra"
  ]
}
