{
  "name": "motion-starter",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --npm-client yarn --ignore starter-native",
    "web": "npm run check-dependencies && cd apps/web && npm start",
    "web-debug": "cd apps/web && npm run start-debug",
    "clean": "rm -rf apps/*/lib && rm -rf apps/*/node_modules",
    "build": "lerna exec --parallel --scope api --scope @jot/models --scope @jot/black --scope @jot/decor --scope @jot/couch -- babel src --out-dir lib -s true",
    "build-web": "cd apps/web && npm run build",
    "compile": "npm run clean && npm run build",
    "watch": "npm run build -- --watch",
    "api": "COUCHDB_USER=admin COUCHDB_PASSWORD=password docker-compose up --remove-orphans",
    "electron": "cd apps/web && npm run electron",
    "check-dependencies": "lerna exec --ignore starter-native -- check-dependencies"
  },
  "dependencies": {
    "lerna": "2.0.0-rc.5"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-plugin-react-transform-motion": "^2.0.2",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-1-without-async": "^1.0.0",
    "check-dependencies": "^1.0.1",
    "gloss": "^6.6.1",
    "react-transform-hmr-motion": "^1.0.5"
  }
}
