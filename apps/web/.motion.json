{
  "babel": {
    "plugins": [
      [
        "babel-plugin-root-import",
        {
          "rootPathSuffix": "app"
        }
      ],
      [
        "gloss/transform",
        {
          "decoratorName": "view",
          "jsxIf": true
        }
      ],
      "babel-plugin-transform-decorators-legacy",
      [
        "babel-plugin-react-transform-motion",
        {
          "decoratorName": "view",
          "transforms": [
            {
              "transform": "react-transform-hmr-motion",
              "imports": [
                "react"
              ],
              "locals": [
                "module"
              ]
            }
          ]
        }
      ]
    ],
    "presets": [
      [
        "babel-preset-env",
        {
          "targets": {
            "node": 8
          },
          "useBuiltIns": true,
          "exclude": [
            "transform-regenerator"
          ]
        }
      ],
      "babel-preset-stage-0",
      "babel-preset-react"
    ]
  },
  "pathType": "filePath",
  "webServerPort": 3001,
  "saveNpmModules": true,
  "bundleDirectory": ".",
  "outputDirectory": "./public",
  "includePolyfills": true
}
