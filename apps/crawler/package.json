{
  "name": "@mcro/crawler",
  "private": true,
  "version": "1.5.1",
  "main": "index.js",
  "module": "src/index.js",
  "scripts": {
    "start": "node index.js",
    "start-prod": "NODE_ENV=production IS_PROD=true node lib/index.js",
    "start-dev": "nodemon --inspect=0.0.0.0:5858 lib/index.js",
    "build":
      "CHUNK_COMMONS=false MINIFY=true NODE_ENV=production BUILD_DIR=. ENTRY=./src/browser mcro-build",
    "watch": "npm run build -- --watch"
  },
  "nodemonConfig": {
    "ignore": ["**/*.map", "lib", "dist"]
  },
  "dependencies": {
    "@mcro/ui": "*",
    "@mcro/black": "*",
    "chromeless": "^1.3.0",
    "puppeteer": "^0.12.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "babel-polyfill": "^6.26.0"
  },
  "devDependencies": {
    "@mcro/builder": "^1.5.1",
    "nodemon": "^1.11.0"
  }
}
