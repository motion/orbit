{
  "version": 2,
  "name": "orbit-site",
  "builds": [
    {
      "src": "./src/server.ts",
      "use": "@now/node"
    },
    {
      "src": "package.json",
      "use": "@now/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/public/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/public/$1"
    },
    { "src": "/api/(.*)", "dest": "/src/server" },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/index.html"
    }
  ]
}
